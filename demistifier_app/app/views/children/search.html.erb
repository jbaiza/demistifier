<section id="search">
  <div class="inner">
    <%= form_tag search_children_path, method: :post do -%>
      <div class="row uniform 50%">
        <div class="6u 12u$(xsmall)">
          <%= select_month(@month || Date.today) %>
        </div>
        <div class="6u$ 12u$(xsmall)">
          <%= select_year(@year || Date.today, :start_year => Date.today.year, :end_year => 5.years.from_now.year) %>
        </div>
      </div>
      <hr>
      <h3>I do not know my kid's id</h3>
      <div class="row uniform 50%">
        <div class="6u 12u$(xsmall)">
          <input type="text" name="child_initials" id="name" value="<%= @child_initials %>" placeholder="Kid's initials">
        </div>
        <div class="6u$ 12u$(xsmall)">
          <input type="submit" name="initials" value="Search" class="special">
          <input type="submit" name="clear" value="Clear" class="special">
        </div>
      </div>
      <% if @institutions %>
        <%= select_tag('institution_id', options_from_collection_for_select(@institutions, :id, :name, @institution_id),
          prompt: "Select institution") %>
      <% end %>
      <% if @children %>
        <table>
          <thead>
            <tr>
              <th>Child UID</th>
              <th>Institution/Language</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @children.each do |child| %>
              <tr>
                <td><%= child.child_uid%></td>
                <td>
                  <%= child.applications.map { |a| "#{a.institution_name} / #{a.language}"}.join('<br>').html_safe %>
                </td>
                <td><%= link_to 'Show more', child_path(child) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
      <hr>
      <h3>I know my kid's id</h3>
      <div class="row uniform 50%">
        <div class="6u 12u$(xsmall)">
          <input type="text" name="child_uid" id="name" value="<%= @child_uid %>" placeholder="Kid's ID">
        </div>
        <div class="6u$ 12u$(xsmall)">
          <input type="submit" name="uid" value="Search" class="special">
        </div>
      </div>
      <p class="hint">
        <%= link_to "Find out your kid's ID", hint_children_path %>
      </p>
    <% end -%>

    <%- if @child -%>
      <%= render 'applications', applications: @child.get_applications_calculated(session) %>
    <% end -%>
  </div>
</div>
